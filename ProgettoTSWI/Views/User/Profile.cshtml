@model ProgettoTSWI.Models.User

@{
    ViewData["Title"] = "Profilo Utente";
}



<div class="container d-flex justify-content-center mt-5 login-background">
    <div class="card shadow p-4 login-card" style="max-width: 600px; width: 100%; background-color: #f9f9f9;">
        <h2 class="text-center mb-4">Benvenuto, @Model.Name</h2>

        <h5 class="mb-3 text-center">Informazioni personali</h5>
        <ul class="list-group list-group-flush mb-4">
            <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
            <li class="list-group-item"><strong>Nome:</strong> @Model.Name</li>
            <li class="list-group-item"><strong>Cognome:</strong> @Model.Surname</li>
            <li class="list-group-item"><strong>Aka:</strong> @Model.Aka</li>
            <li class="list-group-item"><strong>Profilo Instagram:</strong> @Model.InstaProfile</li>
        </ul>

        <div class="text-center">
            <a class="btn btn-success" href="@Url.Action("Edit", "User")">Modifica i tuoi dati</a>
        </div>
    
<div class="container d-flex justify-content-center mt-5">
    <div class="card shadow p-4" style="max-width: 700px; width: 100%; background-color: #f9f9f9;">
        <h4 class="text-center mb-4">Eventi a cui hai partecipato</h4>

        @if (Model.Participations.Any())
        {
            <div class="list-group">
                @foreach (var p in Model.Participations)
                {
                    <div class="list-group-item mb-3" style="border-radius: 0.5rem; background-color: #fff;">
                        <h5 class="mb-1">@p.Event.EventName</h5>
                        <p class="mb-1 text-muted">@p.Event.EventDate.ToShortDateString()</p>
                        <p><strong>Recensione:</strong> @(string.IsNullOrWhiteSpace(p.ParticipationReview) ? "Nessuna" : p.ParticipationReview)</p>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center">Non hai ancora partecipato a nessun evento.</p>
        }
    </div>
</div>
</div>
</div>
