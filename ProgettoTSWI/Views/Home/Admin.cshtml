﻿@{
    ViewData["Title"] = "Admin";
}
<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Stili globali */
        :root {
            --primary: #FFFFFF; /* Bianco */
            --secondary: #000000;
            --accent: #00B4D8; /* Azzurro chiaro */
            --text: #F1F1F1;
            --dark-bg: #111111;
            --light-bg: #1E1E1E;
            --alert-bg: #F8F9FA; /* Grigio chiarissimo per alert */
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text);
            min-height: 100vh;
            background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.85)), url('https://www.pixelstalk.net/wp-content/uploads/2016/06/Free-Images-HD-Dance-Wallpapers.jpg') fixed center/cover;
        }


        .btn-outline-primary {
            color: var(--accent);
            border-color: var(--accent);
        }

        .btn-outline-success {
            color: #28a745;
            border-color: #28a745;
        }

        .btn-outline-danger {
            color: #dc3545;
            border-color: #dc3545;
        }

        /* Alert grigio chiarissimo */
        .alert {
            background-color: var(--alert-bg) !important;
            color: #212529 !important;
            border-left: 4px solid var(--accent);
            border-radius: 0;
        }

        .alert-warning {
            border-left-color: #FFC107;
        }

        .alert-info {
            border-left-color: var(--accent);
        }

        /* Effetti hover per card immagini */
        .img-card-btn:hover img {
            opacity: 1 !important;
            transform: scale(1.03);
        }

        .img-card-btn:hover {
            transform: translateY(-3px) !important;
        }

        .img-card-btn {
            transition: transform 0.3s ease !important;
        }

        /* Footer */
        .footer {
            background-color: var(--secondary);
            border-top: 1px solid #333;
        }

        /* Stili personalizzati per la pagina admin */
        .admin-container {
            max-width: 500px;
            margin: 2rem auto;
            padding: 2rem;
            background-color: var(--light-bg);
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .admin-title {
            color: var(--accent);
            font-weight: 700;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .list-group-item {
            background-color: darkslategrey;
            color: var(--text);
            border: 1px solid #333;
            margin-bottom: 0.5rem;
            transition: all 0.3s ease;
        }

        .list-group-item:hover {
            background-color: rgba(0, 180, 216, 0.1);
            border-color: var(--accent);
            color: var(--accent);
            transform: translateX(5px);
        }

        .logout-btn {
            margin-top: 1.5rem;
            width: 100%;
        }
    </style>
</head>

<body>
	<div class="d-flex justify-content-end">
		<form asp-controller="Admin" asp-action="Logout" method="post" class="d-inline">
			<button type="submit" class="btn btn-outline-danger px-4">Logout</button>
		</form>
	</div>
    <div class="container mt-5" style="max-width: 400px;">
        <h2>You can perform the following functions as an admin</h2>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        else if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <div class="list-group mt-4">
            <a asp-controller="Admin" asp-action="ManageEvents" class="list-group-item list-group-item-action">
                Manage Events
            </a>
            <a asp-controller="Admin" asp-action="ApproveRequests" class="list-group-item list-group-item-action">
                Approve Requests
            </a>
            <a asp-controller="Admin" asp-action="DeleteReviews" class="list-group-item list-group-item-action">
                Delete Reviews
            </a>
            <a asp-controller="Admin" asp-action="DeleteUsers" class="list-group-item list-group-item-action">
                Delete Users
            </a>
            <a asp-controller="Admin" asp-action="PromoteUser" class="list-group-item list-group-item-action">
                Promote User
            </a>
        </div>
    </div>
</body>