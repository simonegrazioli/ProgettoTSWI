@{
    ViewData["Title"] = "Dashboard";
}

<style>
    :root {
         --primary: #7fffd4; /* Giallo-arancio */
        --secondary: #000000;
        --accent: #FFFFFF;
        --text: #F1F1F1;
    }
    
    body {
        background-color: var(--secondary);
        font-family: 'Montserrat', sans-serif;
        color: var(--text);
        margin: 0;
        padding: 0;
        line-height: 1.6;
        min-height: 100vh;
    }
    
    .logo-container {
        text-align: center;
        padding: 2rem 0;
    }
    
    .logo {
        font-weight: 700;
        font-size: 2.5rem;
        color: var(--accent);
        text-decoration: none;
        letter-spacing: 2px;
    }
    
    .logo span {
        color: var(--primary);
    }
    
    .btn-card {
        height: 250px;
        border: none;
        border-radius: 0;
        overflow: hidden;
        transition: all 0.3s ease;
        position: relative;
        margin-bottom: 2rem;
        background-color: #111;
        border: 1px solid #333;
    }
    
    .btn-card:hover {
        transform: translateY(-5px);
       box-shadow: 0 10px 20px rgba(127,255,212, 0.2);
        border-color: var(--primary);
    }
    
    .btn-card img {
        transition: all 0.5s ease;
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(0.8);
    }
    
    .btn-card:hover img {
        filter: brightness(1);
    }
    
    .card-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        padding: 20px;
        background: linear-gradient(to top, rgba(0,0,0,0.9), transparent);
    }
    
    .card-title {
        font-weight: 700;
        font-size: 1.5rem;
        margin-bottom: 0;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: var(--accent);
    }
    
    .btn-primary {
        background-color: var(--primary);
        color: var(--secondary);
        border: none;
        padding: 12px 30px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 2px;
        transition: all 0.3s ease;
        border-radius: 0;
        font-size: 0.9rem;
    }
    
    .btn-primary:hover {
        background-color: #FF8C00;
        color: var(--secondary);
        transform: translateY(-3px);
    }
    
    .section-title {
        font-weight: 300;
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 3px;
        color: var(--accent);
    }
    
    .welcome-message {
        font-weight: 300;
        font-size: 1rem;
        margin-bottom: 3rem;
        color: #999;
    }
    
    .full-width-footer {
        background-color: #111;
        color: var(--text);
        padding: 2rem 0;
        width: 100%;
        margin-top: 3rem;
        border-top: 1px solid #333;
    }
    
    .container {
        max-width: 1200px;
        padding: 0 20px;
    }
    
    .alert-custom {
        background-color: #222;
        color: var(--primary);
        border-left: 4px solid var(--primary);
        border-radius: 0;
    }
    
    /* Effetto glow al hover sugli elementi interattivi */
    .btn-primary:hover,
    .btn-card:hover .card-title {
        text-shadow: 0 0 10px rgba(177, 156, 217, 0.7);
    }
</style>

<!-- Logo Centrato -->
<div class="logo-container">
    <a href="#" class="logo">URBAN<span>PURPLE</span></a>
</div>

<!-- Main Content -->
<div class="container py-3">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-custom alert-dismissible fade show mb-5">
            @TempData["Message"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="text-center mb-5">
        <h1 class="section-title">Benvenuto, @ViewBag.UserName!</h1>
        <p class="welcome-message">Partecipa, Recensisci e Organizza eventi attorno a te!</p>
    </div>

    <div class="row">
        <!-- Eventi -->
        <div class="col-md-4 mb-4">
            <form asp-controller="Home" asp-action="GetEvents" method="get">
                <button type="submit" class="btn-card w-100 position-relative">
                    <img src="img/pexels-biabrg-11063358.jpg" 
                         alt="Eventi">
                    <div class="card-overlay">
                        <h3 class="card-title">Eventi</h3>
                    </div>
                </button>
            </form>
        </div>

        <!-- Profilo -->
        <div class="col-md-4 mb-4">
            <form asp-controller="Home" asp-action="GetUserInfo" method="get">
                <button type="submit" class="btn-card w-100 position-relative">
                    <img src="img/78612.jpg" 
                         alt="Profilo">
                    <div class="card-overlay">
                        <h3 class="card-title">Profilo</h3>
                    </div>
                </button>
            </form>
        </div>

        <!-- Proponi evento -->
        <div class="col-md-4 mb-4">
            <form asp-controller="Home" asp-action="OrganizeEvent" method="get">
                <button type="submit" class="btn-card w-100 position-relative">
                    <img src="img/78722.jpg" 
                         alt="Proponi evento">
                    <div class="card-overlay">
                        <h3 class="card-title">Proponi Evento</h3>
                    </div>
                </button>
            </form>
        </div>
    </div>

    <!-- Logout -->
    <div class="text-center mt-5">
        <form asp-controller="Account" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-primary px-5">
                LOGOUT
            </button>
        </form>
    </div>
</div>

<!-- Footer a larghezza piena -->
<footer class="full-width-footer">
    <div class="container text-center">
        <p class="mb-0 small">&copy; @DateTime.Now.Year Urban Purple. Tutti i diritti riservati.</p>
    </div>
</footer>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>