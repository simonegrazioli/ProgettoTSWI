@model ProgettoTSWI.Models.User

@{
    ViewData["Title"] = "Home Page";
}

<div class="login-background d-flex align-items-center justify-content-center min-vh-100">
    <div class="login-card p-4 rounded shadow" style="max-width: 400px; width: 100%;">
        <h2 class="text-center mb-4">Login</h2>

        <form asp-action="Login" asp-controller="Home" method="post">
            <div class="form-group mb-3">
                <label>Email</label>
                <input type="email" class="form-control" id="Email" name="Email" required />
            </div>

            <div class="form-group mb-4">
                <label>Password</label>
                <input type="password" class="form-control" id="Password" name="Password" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>
            <a asp-controller="UserRegister" asp-action="Register" class="btn btn-outline-secondary w-100 mt-3">Registrati</a>
        </form>
    </div>
</div>
