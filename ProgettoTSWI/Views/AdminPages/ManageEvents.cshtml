@model List<ProgettoTSWI.Models.Event>﻿
@{
    ViewData["Title"] = "ManageEvents";
}
<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Users</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Stili globali */
        :root {
            --primary: #FFFFFF;
            --secondary: #000000;
            --accent: #00B4D8;
            --text: #F1F1F1;
            --dark-bg: #111111;
            --light-bg: #1E1E1E;
            --alert-bg: #F8F9FA;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text);
            min-height: 100vh;
            background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.85)), 
                        url('https://www.pixelstalk.net/wp-content/uploads/2016/06/Free-Images-HD-Dance-Wallpapers.jpg') fixed center/cover;
            padding: 20px 0;
        }

        h1, h5 {
            color: var(--accent);
            font-weight: 700;
        }

        .card {
            background-color: rgba(0, 0, 0, 0.3);
            border: 1px solid #333;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .card-header {
            border-bottom: 1px solid #444;
            font-weight: 600;
        }

        .bg-primary {
            background-color: rgba(0, 180, 216, 0.2) !important;
            color: var(--accent) !important;
        }

        .bg-warning {
            background-color: rgba(255, 193, 7, 0.2) !important;
            color: #ffc107 !important;
        }

        .bg-danger {
            background-color: rgba(220, 53, 69, 0.2) !important;
            color: #dc3545 !important;
        }

        .form-control {
            background-color: rgba(255, 255, 255, 0.1);
            border: 1px solid #444;
            color: var(--text);
        }

        .form-control:focus { 
            background-color: rgba(255, 255, 255, 0.15); 
            border-color: var(--accent); 
            color: var(--text); 
            box-shadow: 0 0 0 0.2rem rgba(0, 180, 216, 0.25); 
        } 


        select option {
            background-color: var(--dark-bg);
            color: var(--text);
            padding: 10px;
        }

        select option:hover,
        select option:focus,
        select option:checked {
            background-color: var(--accent);
            color: var(--secondary);
        }

        .btn {
            padding: 8px 20px;
            font-weight: 600;
        }

        .alert {
            background-color: var(--alert-bg) !important;
            color: #212529 !important;
            border-left: 4px solid var(--accent);
            border-radius: 0;
        }

        .form-check-input {
            margin-top: 0.25rem;
        }

        .form-check-label {
            margin-left: 5px;
        }
        </style>
</head>
<body>

<div class="container mt-5">
    <h1 class="mb-4">Manage Events</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="d-flex justify-content-end">
        <a asp-action="Back" asp-controller="AdminApproveRequest" class="btn btn-secondary">Indietro</a>
    </div>
    @* Form di Inserimento *@
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5>Add New Event</h5>
        </div>
        <div class="card-body">
            <form asp-action="InsertEvent" asp-controller="AdminManageEvent" method="post">

                <div class="form-group mb-3">
                    <label for="eventName">Event Name</label>
                    <input type="text" class="form-control" id="eventName" name="EventName" maxlength="100" required>
                </div>
                <div class="form-group mb-3">
                    <label for="eventDate">Event Date</label>
                    <input type="datetime-local" class="form-control" id="eventDate" name="EventDate" required>
                </div>
                <div class="form-group mb-3">
                    <label for="eventPrice">Event Price</label>
                    <input type="number" min="0" step="0.01" class="form-control" id="eventPrice" name="EventPrice" required>
                </div>
                <div class="form-group mb-3">
                    <label for="eventLocation">Location</label>
                    <input type="text" class="form-control" id="eventLocation" name="EventLocation" maxlength="200" required>
                </div>
                <div class="form-group mb-3">
                    <label for="Description">Description</label>
                    <input type="text" class="form-control" id="Description" name="Description" maxlength="200" required>
                </div>

                <button type="submit" class="btn btn-success">Add Event</button>
            </form>
        </div>
    </div>





    @if (Model == null || Model.Count() == 0)
    {
        <div class="alert alert-warning">No confirmed events available</div>
    }
    else
    {
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5>Edit Event</h5>
            </div>
            <div class="card-body">
                <form asp-action="PreEditEvent" asp-controller="AdminManageEvent" method="post">
                    <div class="form-group mb-3">
                        <label>Select Event to Edit</label>
                        <select name="eventId" class="form-control" required>
                            <option value="">Select an Event</option>
                            @foreach (Event evt in Model)
                            {
                                <option value="@evt.EventId">
                                    @evt.EventName - @evt.EventDate.ToString("dd/MM/yyyy HH:mm")
                                </option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-warning">Update Event</button>
                </form>
            </div>
        </div>

    }

    @* Form di Eliminazione *@



    @if (Model == null || Model.Count() == 0)
    {
        <div class="alert alert-warning">No confirmed events available</div>
    }
    else
    {

        <div class="card mb-4">
            <div class="card-header bg-danger text-dark">
                <h5>Edit Event</h5>
            </div>
            <div class="card-body">
                <form asp-action="DeleteEvent" asp-controller="AdminManageEvent" method="post">
                    <div class="form-group mb-3">
                        <label>Seleziona uno o più eventi da eliminare</label>
                        <div class="form-check">
                            @foreach (Event evt in Model)
                            {
                                <div class="form-check mb-2">
                                    <input type="checkbox" class="form-check-input" name="eventIds" value="@evt.EventId" id="evt_@evt.EventId" />
                                    <label class="form-check-label" for="evt_@evt.EventId">
                                        <strong>@evt.EventName</strong><br />
                                        <span><strong>Data:</strong> @evt.EventDate.ToString("dd/MM/yyyy HH:mm")</span><br />
                                        <span><strong>Prezzo:</strong> @(evt.EventPrice.HasValue ? evt.EventPrice.Value.ToString("C") : "Gratuito")</span><br />
                                        <span><strong>Luogo:</strong> @evt.EventLocation</span><br />
                                        <span><strong>Descrizione:</strong> @evt.Description</span>
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                    <button type="submit" class="btn btn-danger">Delete Selected Events</button>
                </form>
            </div>
        </div>

    }

</div>
</body>