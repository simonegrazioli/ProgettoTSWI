﻿
@model List<ProgettoTSWI.Models.User>
@{
    ViewData["Title"] = "PromoteUser";
}

@if (Model == null)
{
    <div class="alert alert-warning">Non è stato possibile selezionare nessun utente idoneo</div>
}
else
{
    <div class="card mb-4">
        <div class="card-header bg-warning text-dark">
            <h5>Edit Event</h5>
        </div>
        <div class="card-body">
            <form asp-action="PromoteUser" asp-controller="AdminPromoteUser" method="post">
                <div class="form-group mb-3">
                    <label>Seleziona un utente da Promuovere come admin</label>
                    <select name="selectedUser" class="form-control" required>
                        <option value="">Seleziona un utente</option>
                        @foreach (User usr in Model)
                        {
                            <option value="@usr.Id">
                                @usr.Name - @usr.Surname
                                @usr.Aka - @usr.InstaProfile
                            </option>
                        }
                    </select>
                </div>

				<div class="form-group">
					<button type="submit" class="btn btn-warning">Promote user</button>
                    <a asp-action="Back" asp-controller="AdminPromoteUser" class="btn btn-secondary">Annulla</a>
                </div>
            </form>
        </div>
    </div>
}