﻿
@model List<ProgettoTSWI.Models.User>
@{
    ViewData["Title"] = "PromoteUser";
}
<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Users</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Stili globali */
        :root {
            --primary: #FFFFFF;
            --secondary: #000000;
            --accent: #00B4D8;
            --text: #F1F1F1;
            --dark-bg: #111111;
            --light-bg: #1E1E1E;
            --alert-bg: #F8F9FA;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text);
            min-height: 100vh;
            background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.85)), url('https://www.pixelstalk.net/wp-content/uploads/2016/06/Free-Images-HD-Dance-Wallpapers.jpg') fixed center/cover;
            padding: 20px 0;
        }

        h1, h5 {
            color: var(--accent);
            font-weight: 700;
        }

        .card {
            background-color: rgba(0, 0, 0, 0.3);
            border: 1px solid #333;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .card-header {
            border-bottom: 1px solid #444;
            font-weight: 600;
        }

        .bg-primary {
            background-color: rgba(0, 180, 216, 0.2) !important;
            color: var(--accent) !important;
        }

        .bg-warning {
            background-color: rgba(255, 193, 7, 0.2) !important;
            color: #ffc107 !important;
        }

        .bg-danger {
            background-color: rgba(220, 53, 69, 0.2) !important;
            color: #dc3545 !important;
        }

        .form-control {
            background-color: rgba(255, 255, 255, 0.1);
            border: 1px solid #444;
            color: var(--text);
        }

            .form-control:focus {
                background-color: rgba(255, 255, 255, 0.15);
                border-color: var(--accent);
                color: var(--text);
                box-shadow: 0 0 0 0.2rem rgba(0, 180, 216, 0.25);
            }


        select option {
            background-color: var(--dark-bg);
            color: var(--text);
            padding: 10px;
        }

            select option:hover,
            select option:focus,
            select option:checked {
                background-color: var(--accent);
                color: var(--secondary);
            }

        .btn {
            padding: 8px 20px;
            font-weight: 600;
        }

        .alert {
            background-color: var(--alert-bg) !important;
            color: #212529 !important;
            border-left: 4px solid var(--accent);
            border-radius: 0;
        }

        .form-check-input {
            margin-top: 0.25rem;
        }

        .form-check-label {
            margin-left: 5px;
        }
    </style>
</head>
<body>

@if (Model == null)
{
    <div class="alert alert-warning">Non è stato possibile selezionare nessun utente idoneo</div>
}
else
{
    <div class="card mb-4">
        <div class="card-header bg-warning text-dark">
            <h5>Edit Event</h5>
        </div>
        <div class="card-body">
            <form asp-action="PromoteUser" asp-controller="AdminPromoteUser" method="post">
                <div class="form-group mb-3">
                    <label>Seleziona un utente da Promuovere come admin</label>
                    <select name="selectedUser" class="form-control" required>
                        <option value="">Seleziona un utente</option>
                        @foreach (User usr in Model)
                        {
                            <option value="@usr.Id">
                                @usr.Name - @usr.Surname
                                @usr.Aka - @usr.InstaProfile
                            </option>
                        }
                    </select>
                </div>

				<div class="form-group">
					<button type="submit" class="btn btn-warning">Promote user</button>
                    <a asp-action="Back" asp-controller="AdminPromoteUser" class="btn btn-secondary">Annulla</a>
                </div>
            </form>
        </div>
    </div>
}
</body>