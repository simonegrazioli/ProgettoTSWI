@model List<ProgettoTSWI.Models.User>
@{
    ViewData["Title"] = "DeleteUsers";
}
<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Users</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Stili globali */
        :root {
            --primary: #FFFFFF; /* Bianco */
            --secondary: #000000;
            --accent: #00B4D8; /* Azzurro chiaro */
            --text: #FFF;
            --dark-bg: #111111;
            --light-bg: #1E1E1E;
            --alert-bg: #F8F9FA; /* Grigio chiarissimo per alert */
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color:#FFF;
            background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.85)), url('https://www.pixelstalk.net/wp-content/uploads/2016/06/Free-Images-HD-Dance-Wallpapers.jpg') fixed center/cover;
        }



        .alert-warning {
            border-left-color: #FFC107;
        }


        .page-title {
            color: var(--accent);
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .card {
            background-color: rgba(0, 0, 0, 0.5);
            border: 1px solid #333;
            transition: all 0.3s ease;
            height: 100%;
        }

            .card:hover {
                border-color: var(--accent);
                transform: translateY(-3px);
                box-shadow: 0 4px 8px rgba(0, 180, 216, 0.2);
            }

        .detail-label {
            font-weight: 600;
            color: #FFF !important;
            min-width: 100px;
        }

        .detail-row .detail-label,
        .detail-row .detail-value {
            color: #FF0;
        }


        .form-check-label{
            font-weight: 600;
            color: #FFF !important;
        }

    </style>
</head>
<body>
<div class="container mt-5" style="max-width: 400px;">
    <h1>Delete Users</h1>
    <p>Seleziona gli utenti che vuoi eliminare e conferma con il tasto "Elimina Selezionati"</p>
</div>

@if (Model == null || Model.Count() == 0)
{
    <div class="alert alert-warning">No users available</div>
}

<form asp-action="DeleteUsers" asp-controller="AdminDeleteUsers" method="post">


    <div class="row">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="col-md-6 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="selectedUsers" value="@Model[i].Id" id="@Model[i].Id">
                            <label class="form-check-label" for="@Model[i].Id">
                                <strong>@Model[i].Name @Model[i].Surname</strong>
                            </label>
                        </div>

                        <div class="user-details mt-2">
                            <div class="detail-row">
                                <span class="detail-label">Nickname:</span>
                                <span class="detail-value">@(Model[i].Aka ?? "-")</span>
                            </div>

                            <div class="detail-row">
                                <span class="detail-label">Instagram:</span>
                                <span class="detail-value">
                                    @if (!string.IsNullOrEmpty(Model[i].InstaProfile))
                                    {
                                        <a href="https://instagram.com/@Model[i].InstaProfile" target="_blank">
                                            @Model[i].InstaProfile
                                        </a>
                                    }
                                    else
                                    {
                                        <text>-</text>
                                    }
                                </span>
                            </div>

                            <div class="detail-row">
                                <span class="detail-label">Email:</span>
                                <span class="detail-value">@Model[i].Email</span>
                            </div>

                            <div class="detail-row">
                                <span class="detail-label">Ruolo:</span>
                                <span class="detail-value">@Model[i].Ruolo</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Elimina Selezionati</button>
        <a asp-action="Back" asp-controller="AdminDeleteUsers" class="btn btn-secondary">Annulla</a>
    </div>
</form>
</body>