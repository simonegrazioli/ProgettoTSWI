@model List<ProgettoTSWI.Models.User>
@{
    ViewData["Title"] = "DeleteUsers";
}
<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Users</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Stili globali */
        :root {
            --primary: #FFFFFF; /* Bianco */
            --secondary: #000000;
            --accent: #00B4D8; /* Azzurro chiaro */
            --text: #F1F1F1;
            --dark-bg: #111111;
            --light-bg: #1E1E1E;
            --alert-bg: #F8F9FA; /* Grigio chiarissimo per alert */
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text);
            min-height: 100vh;
            background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.85)), url('https://www.pixelstalk.net/wp-content/uploads/2016/06/Free-Images-HD-Dance-Wallpapers.jpg') fixed center/cover;
        }


        .btn-outline-primary {
            color: var(--accent);
            border-color: var(--accent);
        }

        .btn-outline-success {
            color: #28a745;
            border-color: #28a745;
        }

        .btn-outline-danger {
            color: #dc3545;
            border-color: #dc3545;
        }

        /* Alert grigio chiarissimo */
        .alert {
            background-color: var(--alert-bg) !important;
            color: #212529 !important;
            border-left: 4px solid var(--accent);
            border-radius: 0;
        }

        .alert-warning {
            border-left-color: #FFC107;
        }

        .alert-info {
            border-left-color: var(--accent);
        }

        /* Footer */
        .footer {
            background-color: var(--secondary);
            border-top: 1px solid #333;
            padding: 1rem 0;
        }

        /* Stili personalizzati per la pagina */
        .page-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 2rem;
            background-color: rgba(30, 30, 30, 0.9);
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.6);
            border: 1px solid var(--accent);
        }

        .page-title {
            color: var(--accent);
            font-weight: 700;
            margin-bottom: 1rem;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
        }

        .card {
            background-color: rgba(0, 0, 0, 0.3);
            border: 1px solid #333;
            transition: all 0.3s ease;
            height: 100%;
        }

            .card:hover {
                border-color: var(--accent);
                transform: translateY(-3px);
                box-shadow: 0 4px 8px rgba(0, 180, 216, 0.2);
            }

        .form-check-input {
            background-color: rgba(255, 255, 255, 0.1);
            border: 1px solid var(--accent);
        }

            .form-check-input:checked {
                background-color: var(--accent);
                border-color: var(--accent);
            }

        .user-details {
            margin-top: 1rem;
        }

        .detail-row {
            display: flex;
            margin-bottom: 0.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding-bottom: 0.5rem;
        }

        .detail-label {
            font-weight: 600;
            color: var(--accent);
            min-width: 100px;
        }

        .detail-value {
            flex: 1;
        }

            .detail-value a {
                color: var(--text);
                text-decoration: none;
            }

                .detail-value a:hover {
                    color: var(--accent);
                    text-decoration: underline;
                }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
        }

        .form-group {
            margin-top: 2rem;
            padding-top: 1rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

    </style>
</head>
<body>
<div class="container mt-5" style="max-width: 400px;">
    <h1>Delete Users</h1>
    <p>Seleziona gli utenti che vuoi eliminare e conferma con il tasto "Elimina Selezionati"</p>
</div>

@if (Model == null || Model.Count() == 0)
{
    <div class="alert alert-warning">No users available</div>
}

<form asp-action="DeleteUsers" asp-controller="AdminDeleteUsers" method="post">


    <div class="row">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="col-md-6 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="selectedUsers" value="@Model[i].Id" id="@Model[i].Id">
                            <label class="form-check-label" for="@Model[i].Id">
                                <strong>@Model[i].Name @Model[i].Surname</strong>
                            </label>
                        </div>

                        <div class="user-details mt-2">
                            <div class="detail-row">
                                <span class="detail-label">Nickname:</span>
                                <span class="detail-value">@(Model[i].Aka ?? "-")</span>
                            </div>

                            <div class="detail-row">
                                <span class="detail-label">Instagram:</span>
                                <span class="detail-value">
                                    @if (!string.IsNullOrEmpty(Model[i].InstaProfile))
                                    {
                                        <a href="https://instagram.com/@Model[i].InstaProfile" target="_blank">
                                            @Model[i].InstaProfile
                                        </a>
                                    }
                                    else
                                    {
                                        <text>-</text>
                                    }
                                </span>
                            </div>

                            <div class="detail-row">
                                <span class="detail-label">Email:</span>
                                <span class="detail-value">@Model[i].Email</span>
                            </div>

                            <div class="detail-row">
                                <span class="detail-label">Ruolo:</span>
                                <span class="detail-value">@Model[i].Ruolo</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Elimina Selezionati</button>
        <a asp-action="Back" asp-controller="AdminDeleteUsers" class="btn btn-secondary">Annulla</a>
    </div>
</form>
</body>