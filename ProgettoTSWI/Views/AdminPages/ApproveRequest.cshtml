﻿
@model List<ProgettoTSWI.Models.Event>

@{
    ViewData["Title"] = "ApproveRequests";
}
<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Users</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Stili globali */
        :root {
            --primary: #FFFFFF; /* Bianco */
            --secondary: #000000;
            --accent: #00B4D8; /* Azzurro chiaro */
            --text: #FFF;
            --dark-bg: #111111;
            --light-bg: #1E1E1E;
            --alert-bg: #F8F9FA; /* Grigio chiarissimo per alert */
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: #FFF;
            background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.85)), url('https://www.pixelstalk.net/wp-content/uploads/2016/06/Free-Images-HD-Dance-Wallpapers.jpg') fixed center/cover;
        }



        .alert-warning {
            border-left-color: #FFC107;
        }


        .page-title {
            color: var(--accent);
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .card {
            background-color: rgba(0, 0, 0, 0.5);
            border: 1px solid #333;
            transition: all 0.3s ease;
            height: 100%;
        }

        .card:hover {
            border-color: var(--accent);
            transform: translateY(-3px);
            box-shadow: 0 4px 8px rgba(0, 180, 216, 0.2);
        }

        .detail-label {
            font-weight: 600;
            color: #FFF !important;
            min-width: 100px;
        }

        .detail-row .detail-label,
        .detail-row .detail-value {
            color: #FF0;
        }


        .form-check-label {
            font-weight: 600;
            color: #FFF !important;
        }

    </style>
</head>
<body>
<div class="container mt-5" style="max-width: 400px;">
    <h1>Approve Request</h1>
    <p>Seleziona gli eventi che vuoi approvare, quindi con il tasto "Approve selected" lo stato degli eventi andrà a "Confirmed"</p>
</div>

@if (Model == null || Model.Count() == 0)
{
    <div class="alert alert-warning">No request available</div>
}

<form asp-action="ConfirmRefuseRequest" asp-controller="AdminApproveRequest" method="post">

    <div class="row">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="col-md-6 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="selectedRequests" value="@Model[i].EventId" id="@Model[i].EventId">
                            <label class="form-check-label" for="@Model[i].EventId">
                                <strong>@Model[i].EventName</strong>
                            </label>
                        </div>

                        <div class="event-details">
                            <div class="detail-row">
                                <span class="detail-label">Data:</span>
                                <span class="detail-value">@Model[i].EventDate.ToString("dd/MM/yyyy HH:mm")</span>
                            </div>

                            <div class="detail-row">
                                <span class="detail-label">Luogo:</span>
                                <span class="detail-value">@Model[i].EventLocation</span>
                            </div>

                            <div class="detail-row">
                                <span class="detail-label">Descrizione:</span>
                                <span class="detail-value">@Model[i].Description</span>
                            </div>

                            <div class="detail-row">
                                <span class="detail-label">Prezzo:</span>
                                <span class="detail-value">@(Model[i].EventPrice?.ToString("C") ?? "Gratuito")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="form-group">
        <button type="submit" name="actionType" value="approve" class="btn btn-success">Approve selected</button>
        <button type="submit" name="actionType" value="refuse" class="btn btn-danger">Refuse selected</button>
        <a asp-action="Back" asp-controller="AdminApproveRequest" class="btn btn-secondary">Annulla</a>
    </div>
</form>

</body>
