@model List<ProgettoTSWI.Models.Participation>
@{
    ViewData["Title"] = "DeleteReviews";
}


<div class="container mt-5" style="max-width: 400px;">
    <h1>Delete Reviews</h1>
    <p>Seleziona le recensioni che vuoi eliminare e conferma con il tasto "Elimina Selezionati"</p>
</div>
@if (Model == null || Model.Count() == 0)
{
    <div class="alert alert-warning">No reviews available</div>
}
<form asp-action="DeleteReview" asp-controller="AdminDeleteReview" method="post">
    <div class="row">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="col-md-6 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="selectedReviews" value="@Model[i].ParticipationId" id="user_@Model[i].ParticipationId">
                            <label class="form-check-label" for="user_@Model[i].ParticipationId">
                                <strong>@Model[i].ParticipationReview</strong>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Elimina Selezionati</button>
        <a asp-action="Back" asp-controller="AdminDeleteReview" class="btn btn-secondary">Annulla</a>
    </div>
</form>
