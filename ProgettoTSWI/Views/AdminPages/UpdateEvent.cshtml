﻿
@model ProgettoTSWI.Models.Event
@{
    ViewData["Title"] = "UpdateEvent";
}
<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Users</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #FFFFFF;
            --secondary: #000000;
            --accent: #00B4D8;
            --text: #F1F1F1;
            --dark-bg: #111111;
            --light-bg: #1E1E1E;
            --alert-bg: #F8F9FA;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text);
            min-height: 100vh;
            background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.85)), url('https://www.pixelstalk.net/wp-content/uploads/2016/06/Free-Images-HD-Dance-Wallpapers.jpg') fixed center/cover;
            padding: 20px 0;
        }

        h1, h5 {
            color: var(--accent);
            font-weight: 700;
        }

        .card {
            background-color: rgba(0, 0, 0, 0.3);
            border: 1px solid #333;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .card-header {
            border-bottom: 1px solid #444;
            font-weight: 600;
        }

        .bg-primary {
            background-color: rgba(0, 180, 216, 0.2) !important;
            color: var(--accent) !important;
        }

        .bg-warning {
            background-color: rgba(255, 193, 7, 0.2) !important;
            color: #ffc107 !important;
        }

        .bg-danger {
            background-color: rgba(220, 53, 69, 0.2) !important;
            color: #dc3545 !important;
        }

        .form-control {
            background-color: rgba(255, 255, 255, 0.1);
            border: 1px solid #444;
            color: var(--text);
        }

            .form-control:focus {
                background-color: rgba(255, 255, 255, 0.15);
                border-color: var(--accent);
                color: var(--text);
            }


        select option {
            background-color: var(--dark-bg);
            color: var(--text);
            padding: 10px;
        }

            select option:hover,
            select option:focus,
            select option:checked {
                background-color: var(--accent);
                color: var(--secondary);
            }

        .btn {
            padding: 8px 20px;
            font-weight: 600;
        }

    </style>
</head>
<body>
@if (Model == null)
{
    <div class="alert alert-warning">The selected event is no longer available</div>
}
else
{
    <div class="container mt-4">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h3>Modifica Evento</h3>
            </div>
            <div class="card-body">
                <form asp-action="EditEvent" asp-controller="AdminManageEvent" method="post">
                    <input type="hidden" asp-for="EventId" />

                    <div class="form-group mb-3">
                        <label asp-for="EventName">Nome Evento*</label>
                        <input asp-for="EventName" class="form-control" />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="EventDate">Data e Ora*</label>
                        <input asp-for="EventDate" type="datetime-local" class="form-control" />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="EventLocation">Luogo*</label>
                        <input asp-for="EventLocation" class="form-control"  />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description">Description</label>
                        <input asp-for="Description" class="form-control" />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="EventPrice">Prezzo</label>
                        <input asp-for="EventPrice" class="form-control"/>
                    </div>


                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Salva</button>
                        <a asp-action="ManageEvents" asp-controller="Admin" class="btn btn-secondary">Annulla</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
</body>