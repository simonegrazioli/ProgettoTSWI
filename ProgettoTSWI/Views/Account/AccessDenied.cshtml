@{
    ViewData["Title"] = "Accesso Negato";
}

<style>

    
    :root {
        --primary: #7fffd4; /* Colore primario aggiornato */
        --secondary: #000000;
        --accent: #FFFFFF;
        --text: #F1F1F1;
        --success: #28a745;
        --danger: #dc3545;
        --warning: #ffc107;
    }

    body {
        background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), 
                    url('/img/pexels-aleksandr-neplokhov-486399-1238986.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .form-container {
        background-color: rgba(30, 30, 30, 0.9);
        padding: 2rem;
        border: 1px solid #333;
        max-width: 800px;
        margin: 0 auto;
    }

    .form-control {
        background-color: #111;
        border: 1px solid #333;
        color: var(--text);
        border-radius: 0;
    }

    .form-control:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 0.2rem rgba(127, 255, 212, 0.25);
    }

    .form-label {
        color: var(--accent);
        font-weight: 500;
    }

    
    .btn {
        border-radius: 0;
        font-weight: 600;
        letter-spacing: 1px;
        text-transform: uppercase;
        transition: all 0.3s ease;
    }
    
    .btn-primary {
        background-color: var(--primary);
        color: var(--secondary);
        border: none;
    }
    
    .btn-primary:hover {
        background-color: #f0f8ff;
        color: var(--secondary);
        transform: translateY(-3px);
    }
    
    .btn-success {
        background-color: var(--success);
        color: white;
    }
    
    .btn-danger {
        background-color: var(--danger);
        color: white;
    }
    
    .badge {
        border-radius: 0;
        font-weight: 600;
        letter-spacing: 1px;
    }
    
    .border-success {
        border-color: var(--success) !important;
    }
    
    .border-warning {
        border-color: var(--warning) !important;
    }
    
    .bg-success {
        background-color: var(--success) !important;
    }
    
    .bg-warning {
        background-color: var(--warning) !important;
    }

</style>

<div class="text-center mt-5">
    <h1 class="text-danger">❌ Accesso Negato</h1>
    <p class="mt-3">Non hai i permessi per accedere a questa risorsa.</p>

    <a asp-controller="Account" asp-action="Login" class="btn btn-primary mt-4">
        Vai al Login
    </a>
</div>
