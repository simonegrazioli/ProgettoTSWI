@model ProgettoTSWI.Models.EventFormViewModel


@{
    ViewData["Title"] = "Proponi un nuovo evento";
}

<h2 class="text-center mb-4">Proponi un nuovo evento</h2>

<div class="login-background d-flex align-items-center justify-content-center min-vh-100">
<div class="login-card p-4 rounded shadow" style="max-width: 400px; width: 100%;">

<form asp-action="Create" method="post"  class="form-wrapper mx-auto">

      @Html.AntiForgeryToken()

    <div class="form-group" >
        <label>Nome evento</label>
        <input asp-for="EventName" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Data</label>
        <input asp-for="EventDate" class="form-control" type="datetime-local" required />
    </div>

    <div class="form-group">
        <label>Luogo</label>
        <input asp-for="EventLocation" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Prezzo</label>
        <input asp-for="EventPrice" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success mt-3">Invia proposta</button>

    @if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

</form>

</div>
</div>